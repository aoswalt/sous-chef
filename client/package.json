{
  "name": "sous-chef-client",
  "version": "1.0.0",
  "description": "Front end for Sous Chef",
  "main": "index.js",
  "repository": "git@github.com:aoswalt/sous-chef.git",
  "author": "Adam Oswalt <email@adamoswalt.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist/*",

    "prebuild": "npm run clean -s",
    "build": "npm run copy -s && npm run sass:build -s",

    "copy": "cp src/*.html dist/",

    "sass:build": "node-sass src/scss/*.scss -o dist/"
  },
  "devDependencies": {
    "live-reload": "^1.1.0",
    "node-sass": "^3.13.0"
  }
}
